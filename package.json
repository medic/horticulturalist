{
  "name": "horticulturalist",
  "version": "0.12.1",
  "description": "A fancy gardener",
  "repository": "https://github.com/medic/horticulturalist",
  "license": "Apache-2.0",
  "main": "src/index.js",
  "bin": {
    "horti": "src/index.js",
    "horti-svc-start": "bin/svc-start",
    "horti-svc-stop": "bin/svc-stop"
  },
  "scripts": {
