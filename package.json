    "pouchdb-mapreduce": "^6.4.3",
    "request": "^2.85.0",
    "request-promise-native": "^1.0.5",
    "signal-exit": "^3.0.2"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "jshint": "^2.9.4",
    "medic-builds-repo": "^0.3.0",
    "mocha": "^5.0.0",
    "sinon": "4.0.1"
